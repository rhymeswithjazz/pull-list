# Pull-List Configuration

# Mylar3 Settings
MYLAR_URL=http://localhost:8090
MYLAR_API_KEY=your-mylar-api-key

# Komga Settings
KOMGA_URL=http://localhost:25600
KOMGA_USERNAME=admin@example.com
KOMGA_PASSWORD=your-komga-password
# Or use API key instead of username/password
# KOMGA_API_KEY=your-komga-api-key

# App Settings
DATABASE_URL=sqlite+aiosqlite:///./data/pulllist.db
SECRET_KEY=change-this-to-a-random-string
APP_URL=http://localhost:8282

# JWT Settings
# ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24 hours default
# MAGIC_LINK_EXPIRE_MINUTES=15      # 15 minutes default

# SMTP Settings (for magic link emails)
# Leave empty to disable magic link authentication
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=
SMTP_USE_TLS=true

# Schedule (cron format: day_of_week hour minute)
# Default: Daily at 10:00 AM to catch new comics throughout the week
# Notifications are only sent once per week when issues first appear
# Use "*" for daily, "wed" for Wednesday only, "wed,sat" for multiple days
SCHEDULE_DAY_OF_WEEK=*
SCHEDULE_HOUR=10
SCHEDULE_MINUTE=0

# Timezone
TIMEZONE=America/New_York

# Notifications
# Set to receive email when weekly pull-list has new issues
# Requires SMTP to be configured
NOTIFICATION_EMAIL="test@example.com"
